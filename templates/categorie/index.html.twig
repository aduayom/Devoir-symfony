{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block javascripts %} 
   {{parent()}}
<!-- Page level plugins -->
  <script src="{{asset("vendor/datatables/jquery.dataTables.min.js")}}"></script>
  <script src="{{asset("vendor/datatables/dataTables.bootstrap4.min.js")}}"></script>
<!-- Page level custom scripts -->
  <script src="{{asset("js/demo/datatables-demo.js")}}"></script>
{% endblock %}
{% block body %}
    <div class="row" style="margin-left: 15px;">
      {{ form_start(form,
                    {"attr":
                    {"class":"form-inline"}
                  })
                  
    }}
    <div class="form-group mb-2">
      <label for="">{{form_label(form.libelle)}}</label>
      {{form_widget(form.libelle,{"attr":{"class":"form-control"}})}}
      {{form_row(form.Enregistrer)}}
      <small id="helpId" class="text-danger">{{form_errors(form.libelle)}}</small>
    </div>

      {{ form_end(form) }}
    </div>

  <div class="container-fluid">
          <!-- Page Heading -->
    
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th class="w-50">Libelle</th>
                      <th class="w-50">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for categorie in categories %}
                    <tr>
                      <td>{{categorie.id}}</td>
                      <td>{{categorie.libelle}}</td>
                      <td>

                        <a href="{{path("article_show_categorie",{id_categorie:categorie.id})}}" class="btn btn-primary btn-icon-split" >
                          <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                          </span>
                          <span class="text">Mes artciles</span>
                        </a>


                        <a href="{{path("categorie_show",{id:categorie.id})}}" class="btn btn-warning btn-icon-split">
                          <span class="icon text-white-50">
                            <i class="fas fa-exclamation-triangle"></i>
                          </span>
                          <span class="text">Modifier</span>
                        </a>

                        <a href="{{path("categorie_delete",{id:categorie.id})}}" class="btn btn-danger btn-icon-split delete" >
                          <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                          </span>
                          <span class="text">Suprimmer</span>
                        </a>
                      </td>
                    </tr>
                    {% else %}
                      Pas de cat√©gorie
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
{% endblock %}
