{% extends 'base_front.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
        <div class="row mt-5">
            {% for article in article %}
            <div class="card" style="width: 18rem;">
                {% if article.photo %}
                <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{article.titre}}" />
                {% else %}
                <img class="card-img-top" src="https://source.unsplash.com/1600x900/?product" alt="Card image cap">
                {% endif %}
                
                <img class="card-img-top" src="https://source.unsplash.com/1600x900/?product" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title">{{article.titre}}</h5>
                  <p class="card-text">{{article.contenu|slice(0,4)}}</p>
                  <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
              </div>
                
            {% endfor %}
            
             
        </div>
{% endblock %}
